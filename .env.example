# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Firebase Configuration
# Get this from Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project-id",...}
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com

# Option to disable Firebase (for development/testing)
DISABLE_FIREBASE=false

# Biometric Device Configuration (eSSL X990)
# API key for eSSL device authentication
ESSL_DEVICE_KEY=your-essl-device-api-key

# Webhook secret for verifying attendance push requests from devices
ESSL_WEBHOOK_SECRET=your-webhook-verification-secret

# Timezone for attendance calculations
ATTENDANCE_TIMEZONE=Asia/Kolkata

# Firestore Configuration
# Cache size for offline persistence (optional)
FIRESTORE_CACHE_SIZE=100MB

# Enable/disable offline persistence
FIRESTORE_OFFLINE_PERSISTENCE=true

# Security Configuration
# CORS allowed origins (comma-separated for multiple origins)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Cookie settings
COOKIE_SECURE=false
COOKIE_SAME_SITE=lax

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Razorpay Configuration (if using payment gateway)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Email Configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@gmcpnalanda.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your-session-secret-key

# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Render Deployment Configuration (for production)
# These are typically set automatically by Render
# RENDER=true
# IS_PULL_REQUEST=false
