# GMCP LMS Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to Git!

# Node Environment (use "production" when deploying)
NODE_ENV=production

# JWT Secret Key - MUST BE 32+ CHARACTERS
# Generate a strong secret using: https://www.grc.com/passwords.htm
# Copy the "63 random alpha-numeric characters" and paste it here
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long

# Firebase Configuration
# Copy the entire JSON from your Firebase service account
# Go to Firebase Console > Project Settings > Service Accounts > Generate New Private Key
DISABLE_FIREBASE=false
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"YOUR_PROJECT_ID","private_key_id":"YOUR_PRIVATE_KEY_ID","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"YOUR_CLIENT_EMAIL","client_id":"YOUR_CLIENT_ID","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"YOUR_CERT_URL","universe_domain":"googleapis.com"}

# Razorpay Configuration (Replace with your actual keys)
# Get your keys from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=rzp_test_your_key_id_here
RAZORPAY_KEY_SECRET=your_razorpay_key_secret_here

# Port (usually 3000 for local, deployment platforms set this automatically)
PORT=3000
